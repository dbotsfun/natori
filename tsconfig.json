{
	"extends": ["@sapphire/ts-config", "@sapphire/ts-config/decorators"],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
    	"emitDecoratorMetadata": true,
		"noImplicitOverride": false,
		"skipLibCheck": true,
		"declaration": false,
		"declarationMap": false,
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src"]
}
